{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2021",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "rootDir": "./",
        "module": "commonjs",
        "strictNullChecks": true,
        "declaration": true,
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}
